<!-- views/updatepage.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Update Patient</title>
  <link rel="stylesheet" type="text/css" href="/css/styles.css">
</head>
<body >
   
  <%- include('nav.ejs') %>
  <div class="main">
  <div class="update-container">
    <h1>Update Patient</h1>
    <form action="/api/admin/update" method="post">
      <input type="hidden" name="id" value="<%= patient.patient_id %>" required>
      <input type="text" name="patient_id" value="<%= patient.patient_id %>" required>
      <input type="text" name="patient_name" value="<%= patient.patient_name %>" required>
      <input type="number" name="patient_age" value="<%= patient.patient_age %>" required>
      <input type="text" name="patient_address" value="<%= patient.patient_address %>" required>
      <input type="text" name="patient_mobileNo" value="<%= patient.patient_mobileNo %>" required>
      <input type="text" name="patient_disease" value="<%= patient.patient_disease %>" required>
      <button type="submit">Update</button>
    </form>
  </div>
  </div>
</body>
</html>
